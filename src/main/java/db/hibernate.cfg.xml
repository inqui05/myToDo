<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>

        <!-- Database connection settings -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/todo</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>

        <property name="hibernate.hbm2ddl.auto">create</property>
        <property name="show_sql">true</property>
        <property name="connection.release_mode">auto</property>
        <property name="connection.autocommit">true</property>
        <property name="com.intellij.javaee.persistence.datasource">value="name of your datasource"</property>


        <mapping class="main.java.table.Person"/>
        <mapping class="main.java.table.Task"/>
        <mapping class="main.java.table.Log"/>

    </session-factory>

</hibernate-configuration>